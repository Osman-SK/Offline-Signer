{
  "name": "offline-signer-cli",
  "version": "1.0.0",
  "description": "A CLI tool for offline Solana transaction signing.",
  "bin": {
    "offline-signer-cli": "dist/bundle.js"
  },
  "scripts": {
    "build:ts": "tsc",
    "build:bundle": "esbuild dist/index.js --bundle --minify --platform=node --target=node18 --outfile=dist/bundle.js --format=cjs",
    "build": "pnpm build:ts && pnpm build:bundle && pkg .",
    "start": "node dist/bundle.js",
    "dev": "ts-node src/index.ts",
    "create_nonce": "ts-node src/commands/create_nonce.ts"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "tweetnacl": "^1.0.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/yargs": "^17.0.33",
    "esbuild": "^0.24.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "chalk": "4.1.2"
    }
  },
  "pkg": {
    "scripts": "dist/bundle.js",
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist/executables"
  }
}