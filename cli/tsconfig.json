{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs", 
    "moduleResolution": "node",
    "target": "ES2022",      
    "types": ["node"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Debugging
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    
    // Disable these for CJS builds
    "verbatimModuleSyntax": false, 
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}